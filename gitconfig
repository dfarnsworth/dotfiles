[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
  br = branch
  cm = commit
  ci = commit
  co = checkout
  df = diff
  dfc = diff --cached
  lg = log -p
  lgs = log --stat
  lol = log --graph --decorate --format=oneline --abbrev-commit
  lola = log --graph --decorate --format=oneline --abbrev-commit --all
  ls = ls-files
  st = status
[push]
  default = simple

